@page "{id:int}"
@model HE153620_Store.Pages.Admin.Product.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<p>Are you sure you want to delete this product?</p>

<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Product.ProductId</dd>

        <dt class="col-sm-2">Product Name:</dt>
        <dd class="col-sm-10">@Model.Product.ProductName</dd>

        <dt class="col-sm-2">Supplier:</dt>
        <dd class="col-sm-10">@Model.Product.Supplier.Name</dd>

        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Model.Product.Category.CategoryName</dd>

        <dt class="col-sm-2">Unit Price:</dt>
        <dd class="col-sm-10">@Model.Product.UnitPrice.ToString()</dd>

        <dt class="col-sm-2">Units In Stock:</dt>
        <dd class="col-sm-10">@Model.Product.UnitsInStock</dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="List">Back to List</a>
    </form>
</div>