@page
@model HE153620_Store.Pages.Admin.Category.ListModel
@{
    ViewData["Title"] = "Category List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Add New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@category.CategoryId">Edit</a> |
                    <form method="post" asp-page-handler="Delete" asp-route-id="@category.CategoryId" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>